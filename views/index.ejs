<html>
  <head>
    <title>ASIN Search</title>
    <base href="/">
    <link rel="stylesheet" href="css/bulma.min.css" type="text/css">
    <link rel="stylesheet" href="css/base.css", type="text/css">
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img class="logo" src="img/untitled.png" alt="An ASIN lookup utility">
        </a>
    </nav>
    <div class="container">
      
      <div class="section search-form">
        <label for="asin" class="label">
          Enter an ASIN: 
          <input id="asin" class="input is-primary amz-input" type="text">
        </label>
        <button class="button is-primary amz-search">Search</button>
      </div>
      <div class="section amz-search-result hidden">
        <table class="table">
          <thead>
            <tr>
              <th>Categorie(s)</th>
              <th>Dimensions</th>
              <th>Weight</th>
              <th>Seller Rank(s)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="amz-category"></td>
              <td class="amz-dimensions"></td>
              <td class="amz-weight"></td>
              <td class="amz-rank"></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="section amz-search-err hidden">
        <div class="notification is-danger">
          <p class="amz-search-err-reason"></p>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="js/search.js"></script>
  </body>
</html>